<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @unit.object %>
    <h1>Edit <%= @unit.value%></h1>
    <%= link_to "Delete", :action => :delete, :id => @unit.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @unit.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Value: </td>
              <td class="itemValue"><input type="text" name="unit[value]" value="<%= @unit.value %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">From: </td>
              <td class="itemValue"><input type="text" name="unit[from]" value="<%= @unit.from %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">To: </td>
              <td class="itemValue"><input type="text" name="unit[to]" value="<%= @unit.to %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
