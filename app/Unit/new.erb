<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @unit.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @unit.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="unit[value]" class="fieldLabel">Value</label>
            <input type="text" id="unit[value]" name="unit[value]" <%= placeholder("Value") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="unit[from]" class="fieldLabel">From</label>
            <input type="text" id="unit[from]" name="unit[from]" <%= placeholder("From") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="unit[to]" class="fieldLabel">To</label>
            <input type="text" id="unit[to]" name="unit[to]" <%= placeholder("To") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
